<!-- Localization Markup for SEO -->
<meta http-equiv="content-language" content="{{ lang.locale }}">

<link rel="canonical" href="{{ metadata.url }}{{ lang.path }}">

<link rel="alternate" hreflang="x-default" href="{{ metadata.url }}/en">

{% for l in configuredLanguages %}
  <link rel="alternate" hreflang="{{ l.locale }}" href="{{ metadata.url }}{{ l.path }}">
{% endfor %}

